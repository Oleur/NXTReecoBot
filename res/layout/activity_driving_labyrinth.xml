<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/autoNavButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="@dimen/padding_medium"
        android:text="Labyrinth Exploration" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="329dp"
        android:layout_weight="1.41" >

        <com.android.nxtreecobot.LabyrinthView
            android:id="@+id/labyrinthView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.65" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/labyTurnLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="←" />

        <Button
            android:id="@+id/labyGoForward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="↑" />

        <Button
            android:id="@+id/labyGoBackward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:text="↓" />

        <Button
            android:id="@+id/labyTurnRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="→" />
    </LinearLayout>

</LinearLayout>
