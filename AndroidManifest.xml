<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.nxtreecobot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ReecoBotLauncher"
            android:label="@string/title_activity_reeco_bot_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StandaloneModeTab"
            android:label="Standalone Mode" >
        </activity>
        <activity
            android:name=".RemoteControlTab"
            android:label="Remote Control"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".remoteControl.Remote"
            android:label="@string/title_activity_remote" >
        </activity>
        <activity
            android:name=".standalone.DrivingLabyrinthStandalone"
            android:label="@string/title_activity_driving_labyrinth"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".standalone.WorldExplorationStandalone"
            android:label="@string/title_activity_world_exploration_standalone"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".remoteControl.LabyrinthExploreRemote"
            android:label="@string/title_activity_labyrinth_explore_remote"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>